#!/usr/bin/env perl

use FindBin;
use lib "$FindBin::Bin/../lib";

use strict;
use warnings;
use 5.12.0;

use Getopt::Long;

use Ticker;

# Command line flags.
my $debug;
my $help;
my $output_format = "dumper";
my $update;

GetOptions(
    'debug|d' => \$debug,
    'format|f=s' => \$output_format,
    'help|h' => \$help,
    'update|u' => \$update,
);


if ($help) {
    Ticker::display_help ();
}
elsif ($debug) {
    Ticker::update_info ();
    Ticker::display_info ($output_format);
}
elsif ($update) {
    Ticker::update_info ();
}
else {
    Ticker::display_info ($output_format);
}

